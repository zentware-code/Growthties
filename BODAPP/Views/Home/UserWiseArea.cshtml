<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="mb-4 ">
        <span class="text-muted fw-light">Home /</span> User Profile Details
    </h4>

    <!-- Header -->
    <div class="row">
        <input type="hidden" value="" id="hdnId" />
        <div class="col-12">
            <div class="card mb-4">
                <!-- Banner -->
                <div class="user-profile-header-banner">
                    <img id="picture" alt="Banner image" class="rounded-top img-fluid w-100" />
                </div>

                <!-- Profile Section -->
                <div class="user-profile-header d-flex flex-column flex-sm-row text-sm-start text-center mb-4">

                    <!-- Avatar: Image or Initials -->
                    <div class="avatar avatar-xl d-block h-auto ms-0 ms-sm-4 rounded user-profile-img">

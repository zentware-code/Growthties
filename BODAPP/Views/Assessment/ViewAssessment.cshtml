@{
    ViewBag.Title = "ViewAssessment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link href="~/Content/assets/vendor/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />
<!--Upload Modal-->
    <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-end">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel4">Upload Excel File</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="card-body">
                        <div class="container-xxl flex-grow-1 container-p-y">
                            <div class="card mb-3">
                                <div class="card-body">

                                    <div class="mb-3">
                                        @*<div class="d-flex justify-content-between">
                                            <label for="exampleFormControlTextarea1" class="form-label">Upload Excel File</label>
                                        </div>*@
                                        <div class="d-flex mt-2">
                                            <div class="me-2 btn btn-sm btn-success text-white waves-effect waves-light" style="position:relative;">
                                                <input type="file" name="uploadFile" id="uploadFile" hidden data-max-size="200000" accept="application/xlsx,xls,csv" onchange="FileUpload(this)" />
                                                <label class="" for="uploadFile">
                                                    <span class="me-1"><i class="fa-solid fa-cloud-arrow-up"></i></span>Choose file
                                                </label>
                                            </div>
                                            <button type="button" class="btn btn-sm btn-primary waves-effect waves-light" id="btnPost">
                                                <span class="ti ti-upload ti-xs me-1"></span>Upload
                                            </button>
                                        </div>
                                        <div class="progress" style="margin-top:100px;">
                                            <div id="pb" class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                                0%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!--Upload End-->


<div class="container-xxl flex-grow-1 container-p-y" id="section-block">
    <h4 class="py-3 mb-2">
        <span class="text-muted fw-light">Assessment / View All Build Questions /</span> View Assessment
    </h4>
    <div class="col-12 mt-4 card px-3 py-2">
        <div class="row">
            <div class="col-md-12 mb-4 mb-md-2" style="border-bottom:1px solid rgba(0,0,0,0.5);">

                <div class="text-justify px-3 py-2" id="descriptionDiv">

                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("ExportToExcelDynamic", "ScriptJson", new {BaId=@ViewBag.BaId,smmeEmail="SMME_Email",BaIdName="BA_Id"})" class="ms-2 btn btn-sm btn-warning waves-effect waves-light text-white">
                            <i class="ti ti-download ti-xs "></i> Download
                        </a>
                        @*<a href="@Url.Action("AssessmentAnswerUpload", "Assessment")" class="ms-2 btn btn-sm btn-primary waves-effect waves-light text-white">
                            <i class="ti ti-upload ti-xs "></i> Upload
                        </a>*@
                        <!-- Upload Button -->
                        <a href="#" data-bs-toggle="modal" data-bs-target="#uploadModal" class="ms-2 btn btn-sm btn-primary waves-effect waves-light text-white">
                            <i class="ti ti-upload ti-xs"></i> Upload
                        </a>



                    </div>
                    
                    <div class="d-flex justify-content-around py-2" style="border-bottom:1px dashed black;">
                        <div class="d-flex justify-content-center py-2 mb-3" style=" dashed black;">
                            <img src="/Content/assets/img/ESD_LOGO_DARK.png" style="width:200px;" />
                        </div>
                    </div>
                       
                    <p id="description">

                    </p>
                </div>

            </div>

            <div id="segment">

            </div>

        </div>
    </div>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="~/Content/assets/img/favicon.ico" />
    <title>Email Link Expired</title>

    <style>
        body {
            background-image: url("../Content/assets/img/illustrations/images-07-min.jpg");
            background-size: 100vw auto;
            background-position: center top;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            text-align: center;
            padding-top: 100px;
        }

        .container {
            max-width: 500px;
            margin: auto;
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }

        h1 {
            color: #e74c3c;
        }

        p {
            font-size: 18px;
        }

        a.button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

            a.button:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Link Expired !</h1>
        <p>Sorry, this link has expired or is no longer valid.</p>
        <p>If you need to reset your password, please request a new link.</p>
        <a class="button" href="/Account/ChangePassword">Request New Link</a>
    </div>
</body>
</html>

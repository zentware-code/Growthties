        GetEntityMasterById: '@Url.Action("GetProjectForAdmin", "ScriptJson")'

    };
    var globalData = {
        TransactionType: 'Select',
        Param: 'TD_Id',
        //paramValue: parseInt(id),
        StoreProcedure: 'TaskDetails_USP'
    };
</script>


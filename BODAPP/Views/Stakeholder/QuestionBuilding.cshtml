    ViewBag.Title = "QuestionBuilding";
    Layout = "~/Views/Shared/_MainLayoutST.cshtml";
}

<style>
    .swal2-deny{
        display:none!important;
    }
</style>
<link rel="stylesheet" href="~/Content/assets/vendor/libs/datatables-bs5/datatables.bootstrap5.css">

@model BODDal.Models.JobInvoice
@{
    Layout = null;
}
@{

    var Enterpriseuser = Session["EnterpriseUserDataModel"] as BODDal.Models.UserModel;
    var user = Session["UserDataModel"] as BODDal.Models.UserModel;
    var SmmeUser = Session["SMMEUserDataModel"] as BODDal.Models.UserModel;
    var userName = "";
    var profilePic = "";
    var prefix = "";
    var subrole = "";
    var role = "";
    if (Enterpriseuser != null)
    {
        userName = Enterpriseuser.UserName;
        profilePic = Enterpriseuser.UM_ProfilePic;
        prefix = Enterpriseuser.UM_Prefix;
        subrole = Enterpriseuser.UM_SubRole;
        role = Enterpriseuser.UM_Role;
    }
    else if (SmmeUser != null)
    {
        userName = SmmeUser.UserName;
        profilePic = SmmeUser.UM_ProfilePic;
        prefix = SmmeUser.UM_Prefix;
        subrole = SmmeUser.UM_SubRole;
        role = SmmeUser.UM_Role;
    }
    else
    {
        userName = user.UserName;
        profilePic = user.UM_ProfilePic;
        prefix = user.UM_Prefix;
        subrole = user.UM_SubRole;
        role = user.UM_Role;
    }


}
<!DOCTYPE html>

<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact " dir="ltr" data-theme="theme-default" data-assets-path="../Content/assets/" data-template="vertical-menu-template">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Bussiness on Demand</title>

    <!-- Favicon -->
    <link rel="stylesheet" href="~/Content/assets/vendor/fonts/fontawesome.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/fonts/tabler-icons.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/fonts/flag-icons.css" />

    <!-- Core CSS -->

    <link rel="stylesheet" href="~/Content/assets/vendor/css/rtl/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/css/rtl/theme-default.css" class="template-customizer-theme-css" />

    <link rel="stylesheet" href="~/Content/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/Content/assets/vendor/libs/node-waves/node-waves.css" />

    <link rel="stylesheet" href="~/Content/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/libs/typeahead-js/typeahead.css" />


    <!-- Page CSS -->

    <link rel="stylesheet" href="~/Content/assets/vendor/css/pages/app-invoice-print.css" />

    <!-- Helpers -->
    <script src="~/Content/assets/vendor/js/helpers.js"></script>
    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Template customizer: To hide customizer set displayCustomizer value false in config.js.  -->
    <script src="~/Content/assets/vendor/js/template-customizer.js"></script>

    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/Content/assets/js/config.js"></script>
</head>
<body>
    <div class="invoice-print p-5">
        <div class="d-flex justify-content-between flex-row">
            <div class="mb-5">
                <div class="d-flex svg-illustration mb-5 gap-2">
                   
                    <span class="fw-bold">
                        @Model.SMME_CompanyName
                    </span>
                </div>
                 <p class="mb-1">@Model.SMME_BusinessAddress</p>
                <p class="mb-1">@Model.ENR_PrimaryContactEmail </p>
                <p class="mb-0">@Model.SMME_PrimaryContactNo</p>
            </div>
            <div>
                <h5 class="mb-5">INVOICE #@Model.JI_InvoiceNo</h5>
                <div class="mb-1">
                    <span>Date Issues:</span>
                    <span>@Model.JI_InvoiceDate</span>
                </div>
                <div>
                    <span>Job Details:</span>
                    <span style="display :block;width: 250px;word-wrap:break-word;" >@Model.JD_JobName-@Model.JD_VistType</span>
                </div>
            </div>
        </div>
        <hr class="mb-5">
        <div class="row d-flex justify-content-between mb-5">
            <div class="col-sm-6 w-50">
                <h6>Invoice To:</h6>
                <p class="mb-1">@Model.ENR_CompanyName</p>
                <p class="mb-1">@Model.ENR_BusinessAddress</p>
                <p class="mb-1">@Model.ENR_PostalCode</p>
                <p class="mb-1">@Model.ENR_PrimaryContactNo</p>
                <p class="mb-0">@Model.ENR_PrimaryContactEmail</p>
            </div>
            <div class="col-sm-6 w-50">
                <h6>Bill To:</h6>
                <table>
                    <tbody>
                        <tr>
                            <td class="pe-4">Total Due:</td>
                            <td>@Model.JI_Total</td>
                        </tr>
                        <tr>
                            <td class="pe-4">Customer Name:</td>
                            <td>@Model.CD_Name</td>
                        </tr>
                        <tr>
                            <td class="pe-4">Email:</td>
                            <td>@Model.CD_Email</td>
                        </tr>
                        <tr>
                            <td class="pe-4">Contact No:</td>
                            <td>@Model.CD_ContactNumber</td>
                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
        <div class="table-responsive border border-bottom-0 rounded">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Type</th>
                        <th>Cost</th>
                        <th>Qty</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.JobInvoiceTransactionList)
                    {
                        <tr>
                            <td class="text-nowrap text-heading">@a.CM_Name</td>
                            <td class="text-nowrap">@a.CM_Type</td>
                            <td>@a.JIT_Cost</td>
                            <td>@a.JIT_Qty</td>
                            <td>@a.JIT_TotalCost</td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
        <div class="table-responsive">
            <table class="table m-0 table-borderless">
                <tbody>
                    <tr>
                        <td class="align-top px-0 py-6">
                            <p class="mb-1">
                                <span class="me-2 fw-medium">Salesperson:</span>
                                <span>@Model.UserName</span>
                            </p>
                            <span>Thanks for your business</span>
                        </td>
                        <td class="px-0 py-12 w-px-100">
                            <p class="mb-2">Subtotal:</p>
                            
                            <p class="mb-0 pt-2">Total:</p>
                        </td>
                        <td class="text-end px-0 py-6 w-px-100">
                            <p class="fw-medium mb-2">@Model.JI_Total</p>
                         
                            <p class="fw-medium mb-0 pt-2">@Model.JI_Total</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <hr class="mt-0 mb-5">
        <div class="row">
            <div class="col-12">
                <span class="fw-medium">Note:</span>
                <span>
                    It was a pleasure working with you and your team. We hope you will keep us in mind for future
                    freelance projects. Thank You!
                </span>
            </div>
        </div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->




    <script src="~/Content/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Content/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/Content/assets/vendor/js/bootstrap.js"></script>
    <script src="~/Content/assets/vendor/libs/node-waves/node-waves.js"></script>
    <script src="~/Content/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/assets/vendor/libs/hammer/hammer.js"></script>
    <script src="~/Content/assets/vendor/libs/i18n/i18n.js"></script>
    <script src="~/Content/assets/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="~/Content/assets/vendor/js/menu.js"></script>

    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="~/Content/assets/js/main.js"></script>


    <!-- Page JS -->
    <script src="~/Content/assets/js/app-invoice-print.js"></script>
</body>

</html>


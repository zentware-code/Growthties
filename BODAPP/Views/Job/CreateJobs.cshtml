
@{
    ViewBag.Title = "CreateJobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/assets/vendor/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="row">
        <div class="col-md-12">
            <h4 class="py-3 mb-4">
                <span class="text-muted fw-light">Admin /</span> Create Job
            </h4>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form id="formJob" method="post" onsubmit="return false" class="row mt-2">

                        <div class="col-md-12 mb-3">

                            <label for="txtJobName" class="form-label">Job Name</label>
                            <input type="text" class="form-control" id="txtJobName" placeholder="Type Job here" name="txtJobName" />
                            <input type="hidden" id="hdnId" name="hdnId" />


                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="ddlCategory">Category</label>
                            <select class="select2 form-select ddlCategory" data-allow-clear="true" id="ddlCategory" name="ddlCategory"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="ddlEnterprise">Enterprise</label>
                            <select class="select2 form-select ddlEnterprise" data-allow-clear="true" id="ddlEnterprise" name="ddlEnterprise"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="ddlCustomer">Customer</label>
                            <select class="select2 form-select ddlCustomer ddl" data-allow-clear="true" id="ddlCustomer" name="ddlCustomer"></select>
                        </div>
                       
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="ddlSMME">SMME</label>
                            <select class="select2 form-select ddlSMME ddl" data-allow-clear="true" id="ddlSMME" name="ddlSMME"></select>
                        </div>


                        <div class="col-md-4 mb-3">
                            <label class="form-label" for="ddlVisitType">Visit Type</label>
                            <select class="select2 form-select ddlVisitType" data-allow-clear="true" id="ddlVisitType" name="ddlVisitType">
                                <option value="">Select</option>
                                <option value="Single">Single</option>
                                <option value="Multiple">Multiple</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="txtDurationDateFrom" class="form-label">Start  Date</label>
                            <input type="text" class="form-control bs-datepicker-autoclose clsDate dtcls" id="txtStartDate" name="txtStartDate" placeholder="Start Date" autocomplete="off" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="txtDurationDateTo" class="form-label">End Date</label>
                            <input type="text" class="form-control bs-datepicker-autoclose clsDate dtcls" id="txtEndDate" name="txtEndDate" placeholder="End Date" autocomplete="off" />
                            <div id="error-message" style="color: red;"></div>
                        </div>
                        <div class="col-md-3">
                            <div class="small fw-medium">Dynamic Budget</div>
                            <label class="switch">
                                <input type="checkbox" id="tgBudgetType" class="switch-input" />
                                <span class="switch-toggle-slider">
                                    <span class="switch-on"></span>
                                    <span class="switch-off"></span>
                                </span>
                            </label>
                        </div>
                           @*<div class="col-md-4 mb-3">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Budget Type </label>
                            </div>*@


                        <div class="col-md-9 mb-3">
                            <label for="txtBudget" class="form-label">Budget</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input type="text" class="form-control" id="txtBudgetFormatted" placeholder="Type Budget here" oninput="formatCurrency(this)" />
                                <input type="hidden" id="txtBudget" name="txtBudget" />
                            </div>
                        </div>


                        @*<div class="col-md-9 mb-3">
                            <label for="txtDurationDateTo" class="form-label">Budget</label>
                            <input type="text" class="form-control" id="txtBudget" name="txtBudget" autocomplete="off" />
                        </div>*@
                        <br />

                        <div class="col-md-12 mb-3">
                            <label for="txtDescription" class="form-label">Description</label>
                            <textarea type="text" class="form-control" id="txtDescription" placeholder="Type Description here" name="txtDescription"></textarea>
                        </div>


                        <br />

                        <div class="col-md-12 mt-2">
                            <div class="demo-inline-spacing">

                                <button type="submit" class="btn btn-primary btn-shadow-primary" id="btnSave">
                                    <span class="ti-xs ti ti-plus me-1"></span>Submit
                                </button>
                                <a id="btnCancelRedirect" class="btn btn-label-secondary waves-effect">
                                    <span class="fa-solid fa-xmark me-1"></span>Cancel
                                </a>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>

        <!-- Form Repeater -->
        <div class="col-6">
            <div class="row g-4">
                <div class="col-xl-12 col-lg-6 col-md-6">
                    <div class="card">
                        <h5 class="card-header">Multiple Visit Details</h5>
                        <div class="card-body">
                            <form class="form-repeater">
                                <div data-repeater-list="group-a">
                                    <div data-repeater-item>
                                        <div class="row">
                                            <div class="mb-3 col-lg-3 col-xl-3 col-12 mb-0">
                                                <label class="form-label" for="form-repeater-1-1">Goal</label>
                                                <input type="text" id="form-repeater-1-1" class="form-control clsdetails" placeholder="" />
                                            </div>
                                            <div class="col-md-3 mb-3">

                                                <label for="txtDurationDateFrom" class="form-label">Start  Date</label>
                                                <input type="text" class="form-control bs-datepicker-autoclose clsdetails" id="form-repeater-1-2" placeholder="dd/MM/yyyy" autocomplete="off" />


                                            </div>
                                            <div class="col-md-3 mb-3">

                                                <label for="txtDurationDateTo" class="form-label">End Date</label>
                                                <input type="text" class="form-control bs-datepicker-autoclose clsdetails" id="form-repeater-1-3" placeholder="dd/MM/yyyy" autocomplete="off" />

                                            </div>

                                            <div class="mb-3 col-lg-3 col-xl-3 col-12 d-flex align-items-center mb-0">
                                                <button class="btn btn-label-danger mt-4" data-repeater-delete>
                                                    <i class="ti ti-x ti-xs me-1"></i>
                                                    <span class="align-middle">Delete</span>
                                                </button>
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                                <div class="mb-0">
                                    <button class="btn btn-primary clsdetails" data-repeater-create id="btnRept">
                                        <i class="ti ti-plus me-1"></i>
                                        <span class="align-middle">Add</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-xl-12 col-lg-6 col-md-6">
                    <div class="card">
                        <div class="card-header header-elements">
                   
                            <h5 class="m-0 me-2">Maintenance Details</h5>
                            <div class="card-header-elements ms-auto">
                                <button type="button" class="btn btn-xs btn-primary waves-effect waves-light" onclick="PreviewMaintainceModal()"><span class="tf-icon ti ti-pencil ti-xs me-1"></span>Edit</button>
                            </div>
                        </div>


                         
                            <div class="card-body">
                                <div id="dvMaintance">
                                    <table class="table table-striped table-bordered table-hover" id="tblJobMaintPrev">
                                        <thead>
                                            <tr>
                                                <th>Frequency</th>
                                                <th>Visit Count</th>
                                                <th>Date</th>
                                                @*<th>Action</th>*@
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
            </div>
        <!-- /Form Repeater -->

        <div class="modal fade" id="shareProject" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-simple modal-enable-otp modal-dialog-centered">
                <div class="modal-content p-3 p-md-5">
                    <div class="modal-body">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="row">
                            <div class="col-md-12 col-12 mb-md-0 mb-4">
                                <div class="text-center">
                                    <h3 class="mb-2">Maintenance Job</h3>
                                </div>
                                <div class="card-body">

                                    <div>
                                        <div>
                                            <div class="row">
                                                <div class="mb-3 col-md-4">
                                                    <label class="form-label" for="form-maintaince-1-1">Frequency</label>
                                                    <select class="select2 form-select ddlFrequency" data-allow-clear="true" id="ddlFrequency" name="ddlFrequency">
                                                        <option value="">Select</option>
                                                        <option value="Weekly">Weekly</option>
                                                        <option value="Monthly">Monthly</option>
                                                        <option value="Yearly">Yearly</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3 mb-3">

                                                    <label for="txtDurationDateFrom" class="form-label">Visit Count</label>
                                                    <input type="text" id="txtVisitCount" class="form-control" placeholder="" min="0"/>

                                                </div>
                                                <div class="col-md-3 mb-3">

                                                    <label for="txtDurationDateTo" class="form-label">Start Date</label>
                                                    <input type="text" class="form-control bs-datepicker-autoclose" id="txtDate" placeholder="Start Date" autocomplete="off" />

                                                </div>

                                                <div class="mb-3 col-md-2 mb-0">
                                                    <button class="btn btn-primary mt-4" id="btnAddMaintaince">
                                                        <i class="ti ti-plus me-1"></i>
                                                        <span class="align-middle">Add</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <table class="table table-striped table-bordered table-hover" id="tblJobMaint">
                                        <thead>
                                            <tr>
                                                <th>Frequency</th>
                                                <th>Visit Count</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                  
                    <div class="modal-footer p-2">
                      
                        <button class="btn btn-label-primary waves-effect btnsubmitfinal" onclick="PreviewMaintaince()" id="btnPrvSubmit">Show And Close</button>
                     
                    </div>
                    <!-- Multiple Lists Draggable -->
                    <!-- /Multiple Lists Draggable ends -->
                </div>
            </div>
        </div>
    </div>


</div>

@model BODDal.Models.AdminDashBoard
@{
    ViewBag.Title = "ViewAllJobsForAdmin";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/assets/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
<link rel="stylesheet" href="~/Content/assets/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css">
<link rel="stylesheet" href="~/Content/assets/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css">
<link href="~/Content/assets/vendor/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />


<div class="container-xxl flex-grow-1 container-p-y" id="section-block">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Job /</span>View All Jobs
    </h4>

    <div class="row g-4 mb-4">

        <div class="col-sm-6 col-xl-4">
            <div class="card card-border-shadow-warning h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span>Active</span>
                            <div class="d-flex align-items-center my-2">
                                <h3 class="mb-0 me-2"><span id="spnActiveEnter">@Model.TotalOpenJOB</span></h3>

                            </div>
                            @*<p class="mb-0">Last week analytics</p>*@
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-success">
                                <i class="ti ti-user-check ti-sm"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-4">
            <div class="card card-border-shadow-danger h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span>Inactive</span>
                            <div class="d-flex align-items-center my-2">
                                <h3 class="mb-0 me-2"><span id="spnDeactiveEnt">@Model.TotalProgressJOB</span></h3>

                            </div>
                            @*<p class="mb-0">Last week analytics </p>*@
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-danger">
                                <i class="ti ti-user-plus ti-sm"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-4">
            <div class="card card-border-shadow-info h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span>Completed</span>
                            <div class="d-flex align-items-center my-2">
                                <h3 class="mb-0 me-2"><span id="spnPendEnter">@Model.TotalCompletedJOB</span></h3>

                            </div>
                            @*<p class="mb-0">Last week analytics</p>*@
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-warning">
                                <i class="ti ti-user-exclamation ti-sm"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!-- Users List Table -->
    <div class="card">
        <div class="card-header border-bottom d-none">
            <h5 class="card-title mb-3">Search Filter</h5>
            <div class="d-flex justify-content-between align-items-center row pb-2 gap-3 gap-md-0">
                <div class="col-md-4 user_role"></div>
                <div class="col-md-4 user_plan"></div>
                <div class="col-md-4 user_status"></div>
            </div>
        </div>
        <div class="card-datatable table-responsive">
            <table class="datatables-users table" id="datatable-example">
                <thead class="border-top">
                    <tr>
                        <th></th>
                        <th>Job Name</th>
                        <th>Visit Type</th>
                        <th>Status </th>
                        <th>Customer Name</th>
                        <th>MSME </th>

                        <th>Actions</th>
                    </tr>
                </thead>


            </table>
        </div>
        <!-- Offcanvas to add new user -->

    </div>
    <div class="modal fade" id="shareProject" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-simple modal-enable-otp modal-dialog-centered">
            <div class="modal-content p-3 p-md-5">
                <div class="modal-body">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="text-center">
                        <h3 class="mb-2">All Enterprise</h3>
                        <p>Share Jobs with Enterprise</p>
                    </div>
                </div>

                <h4 class="mb-4 pb-2">All Enterprise Details</h4>
                <ul class="p-0 m-0" id="ulUserList">
                    @*<li class="d-flex flex-wrap mb-3">

                            <div class="d-flex justify-content-between flex-grow-1">
                                <div class="me-2">
                                    <h6 class="mb-0">Project Name </h6>
                            <input type=hidden
                                    <p class="mb-0 text-muted">Duration: Datefrom-DateTo</p>
                                </div>
                                <div class="col-3 d-flex align-items-center justify-content-end">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input float-end" type="checkbox" >
                                    </div>
                                </div>
                            </div>
                        </li>*@

                </ul>

            </div>
        </div>
    </div>

</div>

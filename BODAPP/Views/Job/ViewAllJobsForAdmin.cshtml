    var URLList = {

        GetList: '@Url.Action("GetGlobalMasterTransaction", "ScriptJson")',
       
    };
    var globalData = {
        TransactionType: 'SelectEnterpriseForJob',
        param1: 'JD_Id',
        //paramValue: parseInt(id),
        StoreProcedure: 'JobDetails_USP'
    };
</script>

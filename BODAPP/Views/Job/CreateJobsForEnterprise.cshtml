
@{
    ViewBag.Title = "CreateJobsForEnterprise";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/assets/vendor/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />
<div class="container-xxl flex-grow-1 container-p-y">

<div class="row">
    <div class="col-md-12">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">Enterprise /</span> Job Details
        </h4>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="card">
            <div class="card-body">
                <form id="formJob" method="post" onsubmit="return false" class="row mt-2">

                    <div class="col-md-12 mb-3">

                        <label for="txtJobName" class="form-label">Job Name</label>
                        <input type="text" class="form-control" id="txtJobName" placeholder="Type Job here" name="txtJobName" />
                        <input type="hidden" id="hdnId" name="hdnId" />
                        <input type="hidden" id="EntrId" name="EntrId" value="@ViewBag.EntrId" />

                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="ddlCustomer">Customer</label>
                        <select class="select2 form-select ddlCustomer" data-allow-clear="true" id="ddlCustomer" name="ddlCustomer"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="ddlSMME">SMME</label>
                        <select class="select2 form-select ddlSMME" data-allow-clear="true" id="ddlSMME" name="ddlSMME"></select>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="ddlSector">Industry Sector</label>
                        <select class="select2 form-select ddlSector" data-allow-clear="true" id="ddlSector" name="ddlSector"></select>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="multiStepsMobile">Business Type</label>
                        <select class="select2 form-select ddlBusinessType" data-allow-clear="true" id="ddlBusinessType" name="ddlBusinessType"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="ddlCategory">Category</label>
                        <select class="select2 form-select ddlCategory" data-allow-clear="true" id="ddlCategory" name="ddlCategory"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="ddlVisitType">Visit Type</label>
                        <select class="select2 form-select ddlVisitType" data-allow-clear="true" id="ddlVisitType" name="ddlVisitType">
                            <option value="">Select</option>
                            <option value="Single">Single</option>
                            <option value="Multiple">Multiple</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>

                    @*<div class="col-md-3 mb-3">
                        <label for="txtDurationDateFrom" class="form-label">Duration From  Date</label>
                        <input type="text" class="form-control bs-datepicker-autoclose" id="txtDurationDateFrom" name="txtDurationDateFrom" placeholder="Start Date" autocomplete="off" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="txtDurationDateTo" class="form-label">Duration To Date</label>
                        <input type="text" class="form-control bs-datepicker-autoclose" id="txtDurationDateTo" name="txtDurationDateTo" placeholder="End Date" autocomplete="off" />
                        <div id="error-message" style="color: red;"></div>
                    </div>*@

                    <div class="col-md-6 mb-3">
                        <label for="txtDurationDateFrom" class="form-label">Start  Date</label>
                        <input type="text" class="form-control bs-datepicker-autoclose" id="txtStartDate" name="txtStartDate" placeholder="Start Date" autocomplete="off" />
                        @*<input type="text" class="form-control bs-datepicker-autoclose clsDate" id="txtStartDate" name="txtStartDate" placeholder="dd/MM/yyyy" autocomplete="off" />*@
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="txtDurationDateTo" class="form-label">End Date</label>
                        <input type="text" class="form-control bs-datepicker-autoclose" id="txtEndDate" name="txtEndDate" placeholder="End Date" autocomplete="off" />
                        <div id="error-message" style="color: red;"></div>
                        @*<input type="text" class="form-control bs-datepicker-autoclose clsDate" id="txtEndDate" name="txtEndDate" placeholder="dd/MM/yyyy" autocomplete="off" />*@
                    </div>

                    <div class="col-md-3">
                        <div class="small fw-medium">Dynamic Budget</div>
                        <label class="switch">
                            <input type="checkbox" id="tgBudgetType" class="switch-input" />
                            <span class="switch-toggle-slider">
                                <span class="switch-on"></span>
                                <span class="switch-off"></span>
                            </span>

                        </label>
                    </div>
                    <div class="col-md-9 mb-3">
                        <label for="txtBudget" class="form-label">Budget</label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input type="text" class="form-control" id="txtBudgetFormatted" placeholder="Type Budget here" oninput="formatCurrency(this)" />
                            <input type="hidden" id="txtBudget" name="txtBudget" />
                        </div>
                    </div>




                    @*<div class="col-md-9 mb-3">
                        <label for="txtDurationDateTo" class="form-label">Budget</label>
                        <input type="text" class="form-control" id="txtBudget" name="txtBudget" autocomplete="off" />
                    </div>*@
                    <br />

                    <div class="col-md-12 mb-3">
                        <label for="txtDescription" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="txtDescription" placeholder="Type Description here" name="txtDescription"></textarea>
                    </div>

                    @*<label for="txtDescription" class="form-label">Upload Document</label>

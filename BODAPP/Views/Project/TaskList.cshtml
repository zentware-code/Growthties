<link rel="stylesheet" href="~/Content/assets/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css">
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-2">
        <span class="text-muted fw-light">Projects /</span> View All Tasks
    </h4>
    <div class="card">
        <div class="card-datatable table-responsive">
            <input type="hidden" id="EnterpriseId" name="EnterpriseId" value="@ViewBag.EntrId" />
            <input type="hidden" value="@ViewBag.UserType" id="hdnUserType" />
            <input type="hidden" value="@ViewBag.UserId" id="hdnUserId" />

            <input type="hidden" id="hdnTaskName" />
            <input type="hidden" id="hdnDurationDateFrom" />
            <input type="hidden" id="hdnDurationDateTo" />
            <input type="hidden" id="hdnDescription" />

            <table class="datatables-products table" id="datatable-example">
                <thead class="border-top">
                    <tr>
                        <th class="text-nowrap">Task Name</th>
                        @*<th class="text-nowrap">Activity </th>*@
                        <th class="text-nowrap">Project</th>
                        <th class="text-nowrap">Task Date</th>
                        <th class="text-nowrap">Status</th>
                        <th class="text-lg-center">Actions</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!--Project Tagging to User-->
